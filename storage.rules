rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read for car images; adjust if needed.
    match /cars/{fileId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: only authenticated users can read/write their own folder
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback deny
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
